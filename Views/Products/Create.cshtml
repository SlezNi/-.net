@model MyWebApp.Models.Product
@{
    ViewData["Title"] = "Створити продукт";
}
<h2>Створити продукт</h2>
<form method="post" enctype="multipart/form-data">
    <div><label>Назва</label><br /><input name="Name" /></div>
    <div><label>Опис</label><br /><textarea name="Description"></textarea></div>
    <div><label>Ціна</label><br /><input type="number" step="0.01" name="Price" /></div>
    <div><label>Категорія</label><br />
        <select name="CategoryId">
            <option value="">--</option>
            @foreach(var c in ViewBag.Categories as List<MyWebApp.Models.Category> ?? new()){<option value="@c.Id">@c.Name</option>}
        </select>
    </div>
    <div><label>Зображення (можна декілька)</label><br /><input type="file" name="images" multiple /></div>
    <div style="margin-top:12px"><button class="btn" type="submit">Створити</button></div>
</form>
