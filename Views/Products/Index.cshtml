@model IEnumerable<MyWebApp.Models.Product>
@{
    ViewData["Title"] = "Продукти";
}
<h2>Список продуктів</h2>
<p><a class="btn" href="/Products/Create">Створити продукт</a></p>
<table>
    <thead><tr><th>Назва</th><th>Категорія</th><th>Ціна</th><th></th></tr></thead>
    <tbody>
    @foreach(var p in Model){
        <tr>
            <td>@p.Name</td>
            <td>@p.Category?.Name</td>
            <td>@p.Price</td>
            <td>
                <a class="btn" href="/Products/Details/@p.Id">Деталі</a>
                <a class="btn" href="/Products/Edit/@p.Id">Редагувати</a>
                <form method="post" action="/Products/Delete/@p.Id" style="display:inline">
                    <button type="submit">Видалити</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
