<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - MyWebApp</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;900&display=swap" rel="stylesheet">
    <style>
        :root{
            --bg:#0f0507; /* almost black with cherry tone */
            --card:#16060a;
            --accent:#ff2d95; /* neon cherry */
            --accent-2:#7b2cff; /* purple neon complement */
            --muted:#9aa0a6;
            --glass: rgba(255,255,255,0.04);
            --radius:14px;
        }
        html,body{height:100%}
        body{
            margin:0;
            font-family: 'Inter', system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial;
            background:
                radial-gradient(800px 400px at 10% 10%, rgba(255,45,149,0.06), transparent 8%),
                radial-gradient(600px 300px at 90% 90%, rgba(123,44,255,0.04), transparent 8%),
                var(--bg);
            color:#e6e6e6;
            -webkit-font-smoothing:antialiased;
            -moz-osx-font-smoothing:grayscale;
            padding:28px;
        }

        header{
            display:flex;
            align-items:center;
            justify-content:space-between;
            gap:20px;
            margin-bottom:22px;
            backdrop-filter: blur(6px);
            padding:12px 18px;
            border-radius:calc(var(--radius) + 4px);
            background: linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));
            box-shadow: 0 6px 24px rgba(11,6,8,0.6), 0 0 18px rgba(255,45,149,0.035) inset;
            border: 1px solid rgba(255,255,255,0.03);
        }

        header h1{ margin:0; font-weight:800; letter-spacing:0.6px; color:var(--accent); text-shadow:0 2px 12px rgba(255,45,149,0.08) }
        nav a{
            margin-right:12px;
            text-decoration:none;
            color:var(--muted);
            padding:8px 12px;
            border-radius:10px;
            transition:all .18s ease;
            font-weight:600;
        }
        nav a:hover{
            color:#fff;
            transform:translateY(-2px);
            box-shadow: 0 6px 20px rgba(123,44,255,0.06), 0 0 18px rgba(255,45,149,0.06);
            background: linear-gradient(90deg, rgba(255,45,149,0.06), rgba(123,44,255,0.04));
        }

        .container{
            background: linear-gradient(180deg, rgba(255,255,255,0.02), rgba(0,0,0,0.02));
            padding:26px;
            border-radius:var(--radius);
            box-shadow: 0 10px 40px rgba(3,2,3,0.6);
            border: 1px solid rgba(255,255,255,0.025);
        }

        /* Buttons */
        .btn{
            display:inline-flex;
            align-items:center;
            gap:8px;
            padding:10px 14px;
            background: linear-gradient(90deg, var(--accent), var(--accent-2));
            color:white;
            text-decoration:none;
            border-radius:999px;
            font-weight:700;
            box-shadow: 0 8px 28px rgba(123,44,255,0.08), 0 2px 8px rgba(255,45,149,0.12);
            border: none;
            transition: transform .12s ease, box-shadow .12s ease, opacity .12s ease;
        }
        .btn:hover{ transform: translateY(-3px) scale(1.01); box-shadow: 0 18px 48px rgba(123,44,255,0.12), 0 6px 20px rgba(255,45,149,0.16) }
        .btn:active{ transform: translateY(0); opacity:0.95 }

        /* Card / profile */
        .profile { display:flex; gap:24px; align-items:center; }
        .profile img{
            width:180px;
            height:180px;
            object-fit:cover;
            border-radius:18px;
            border: 1px solid rgba(255,255,255,0.04);
            box-shadow: 0 12px 30px rgba(11,6,8,0.6), 0 0 40px rgba(255,45,149,0.06);
            background: linear-gradient(180deg, rgba(255,255,255,0.02), rgba(0,0,0,0.02));
        }

        h2{ color: #fff; margin:0 0 6px 0; font-weight:800; text-shadow: 0 6px 18px rgba(11,6,8,0.6) }
        p { color: var(--muted); line-height:1.5 }

        /* Skills */
        .skills{ margin-top:14px }
        .skill-bar { height:12px; background: rgba(255,255,255,0.03); border-radius:999px; overflow:hidden; box-shadow: inset 0 -1px 0 rgba(0,0,0,0.4); }
        .skill-bar > span { display:block; height:100%; background: linear-gradient(90deg, rgba(255,45,149,0.9), rgba(123,44,255,0.9)); box-shadow: 0 6px 18px rgba(123,44,255,0.06) }

        /* Tables */
        table { width:100%; border-collapse:collapse; margin-top:12px }
        th,td{ padding:12px 10px; border-bottom: 1px solid rgba(255,255,255,0.03); color:var(--muted) }
        thead th{ color:#cfc9d1; text-transform:uppercase; font-size:12px; letter-spacing:0.8px }

        /* Forms */
        input, textarea, select {
            background: var(--card);
            color: #fff;
            border: 1px solid rgba(255,255,255,0.03);
            padding:10px 12px;
            border-radius:10px;
            outline:none;
            transition: box-shadow .12s ease, transform .08s ease;
        }
        input:focus, textarea:focus, select:focus {
            box-shadow: 0 8px 30px rgba(123,44,255,0.06), 0 0 12px rgba(255,45,149,0.05);
            transform: translateY(-2px);
        }

        footer { margin-top:22px; color:var(--muted); font-size:13px; text-align:center }
        {
            .profile { flex-direction:column; align-items:flex-start }
            header{flex-direction:column;align-items:flex-start}
        }
    </style>
</head>
<body>
    <header>
        <div style="display:flex;align-items:center;gap:16px">
            <h1>MyWebApp</h1>
            <div style="font-size:13px;color:var(--muted)">Dark Cherry · Neon UI</div>
        </div>
        <nav>
            <a href="/">Про мене</a>
            <a href="/Products">Продукти</a>
            <a href="/Categories">Категорії</a>
        </nav>
    </header>
    <div class="container">
        @RenderBody()
    </div>
    <footer>
        ❤️Dark Cherry❤️
    </footer>
</body>
</html>
